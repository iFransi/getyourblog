    <div class="container">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->
                <h1>{{post.title}}</h1>
                
                <p class="lead">
                    by {{post.username}}
                </p>

                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> Posted on {{formatDate post.postDate}}</p>

                <hr>

                <!-- Preview Image -->
                <img class="img-responsive" src='{{post.image}}' alt="">

                <hr>

                <!-- Post Content -->
                <p>{{post.content}}</p>

                <hr>
                
                {{#if public}}
                <a class="btn btn-primary" href='/'>Back <span class="glyphicon glyphicon-chevron-right"></span></a>
                {{else}}
                <a class="btn btn-primary" href='/user/postlist'>Back <span class="glyphicon glyphicon-chevron-right"></span></a>
                <a class="btn btn-primary" href='/user/deletePost/{{post._id}}'>Delete <span class="glyphicon glyphicon-remove"></span></a>
                <a class="btn btn-primary" href='/user/editPost/{{post._id}}'>Edit <span class="glyphicon glyphicon-pencil"></span></a>
                {{/if}}

            </div>
        </div>
        <!-- /.row -->
       

    </div>