<div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-md-8">
                <h1 class="page-header">Search Results</h1>
            </div>
        </div>
        <!-- /.row -->
        {{#if post}}
        {{#each post as |post|}}
        <!-- Project One -->
        <div class="row post">

            <div class="col-md-6">
                <h3>{{post.title}}
                <small>by {{post.username}}, <span class="glyphicon glyphicon-time"></span> {{formatDate post.postDate}}</small>
                </h3>
                <p>{{post.content}}</p>
                <a class="btn btn-primary" href='/postDetails/{{post._id}}'>Read More <span class="glyphicon glyphicon-chevron-right"></span></a>
                <hr>
            </div>
        </div>
        <!-- /.row -->

        
        {{/each}}
          {{else}}
	  <p>Sorry, there are no Posts found</p>
  {{/if}}
        <!-- Footer -->
    </div>